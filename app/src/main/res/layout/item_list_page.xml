<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_item_iv"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_margin="8dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/green_200" />

    <TextView
        android:id="@+id/list_item_header"
        style="@style/list_item_header_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:lines="1"
        app:layout_constraintEnd_toStartOf="@id/list_item_number_tv"
        app:layout_constraintStart_toEndOf="@id/list_item_iv"
        app:layout_constraintTop_toTopOf="@id/list_item_iv"
        tools:text="Some text for preview" />

    <TextView
        android:id="@+id/list_item_desc"
        style="@style/list_item_desc_style"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="@id/list_item_iv"
        app:layout_constraintEnd_toEndOf="@id/list_item_header"
        app:layout_constraintStart_toStartOf="@id/list_item_header"
        app:layout_constraintTop_toBottomOf="@id/list_item_header"
        tools:text="Some sample"/>

    <TextView
        android:id="@+id/list_item_number_tv"
        style="@style/list_item_desc_style"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@id/list_item_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/list_item_iv"
        tools:text="01" />

    <View
        android:id="@+id/item_divider"
        android:layout_width="0dp"
        android:layout_height="1.25dp"
        android:background="@color/black"
        android:alpha=".2"
        app:layout_constraintStart_toStartOf="@id/list_item_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>